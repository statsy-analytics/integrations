{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
